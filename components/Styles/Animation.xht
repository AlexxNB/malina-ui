<style global>
    :root{
        --duration: .35s;
    }

    .animated {
        animation-duration: var(--duration);
        animation-fill-mode: both;
    }

    @keyframes fadeIn {
        from {opacity: 0}
    }
    .fadeIn { animation-name: fadeIn }
    
    @keyframes fadeOut {
        to {opacity: 0}
    }
    .fadeOut { animation-name: fadeOut }
</style>