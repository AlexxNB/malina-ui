<script>
    export let gutter = 1;
    export let reverse = false;

    $: style = gutter == 1 ? undefined : `--gutter:${Number(gutter) ? Number(gutter)+'rem': gutter }`
</script>

<div 
    class:reverse 
    {style} 
    {...$attributes}
^><slot/></div>

<style>
    div{
        --gutter: 1rem;
        display: flex;
        flex-flow: row wrap;
        justify-content: flex-start;
    }

    .reverse{
        flex-direction: row-reverse;
    }
</style>