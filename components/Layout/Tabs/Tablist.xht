<script>
    import {store} from 'storxy';

    export let full = false;
    export let value = 0;

    const tablist = store({
        count:0,
        current: value
    });

    $onDestroy( tablist.subscribe(v => value=v.current) );

    $context.tablist = tablist;
    
    $: value, ()=>tablist.$.current=value;
</script>

<ul role="tablist" class=" $main" class:full ^ @@><slot/></ul>

